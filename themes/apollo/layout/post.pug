extends partial/layout

block site_title
    != page.title + " Â· " + config.title

block description
    - desc = page.desc || page.title + ' - ' + config.author;
    meta(name="description", content=desc)

block container
    .post
          .postdivide
            article.post-block
                h1.post-title
                    != page.title
                .post-meta
                        .post-time
                            != full_date(page.date, 'll')
                .post-content
                    != page.content
                    if page.title != "Tag Cloud"
                      .widget
                        if page.tags
                          .tags
                            for tag in page.tags.toArray()
                              a.eachtag(href=url_for(tag.path))= tag.name
                    else
                      .widget
                        .tagcloud
                          != tagcloud({min_font: 18, max_font:24 , amount: 100, orderby: 'count'})
