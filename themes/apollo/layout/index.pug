extends partial/layout

block container
    ul.home.post-list
        - page.posts.each(function(item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for(item.path))
                            != item.title
                    .post-meta
                            .post-time
                                != full_date(item.date, 'll')
                    .post-content
                        != item.excerpt
                    a.read-more(href=url_for(item.path))!= __('more')
        - })
