mixin postInfo(item)
    .post-meta
        .post-time
            != full_date(item.date, 'll')


mixin postList()
    ul.archive.post-list
        if page.tag || page.category
            .label-title=  __('reading_label', page.tag || page.category)
        - page.posts.each(function(item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for(item.path))
                            != item.title
                    +postInfo(item)

        - })

mixin posts()
    ul.home.post-list
        - page.posts.each(function(item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for(item.path))
                            != item.title
                    +postInfo( item )
                    .post-content
                        != item.excerpt
                    a.read-more(href=url_for(item.path))!= __('more')
        - })

mixin post(item)
    .post
      .postdivide
        article.post-block
            h1.post-title
                != item.title
            +postInfo(item)
            .post-content
                != item.content
                if page.title != "Tag Cloud"
                  .widget
                    if page.tags
                      .tags
                        for tag in page.tags.toArray()
                          a.eachtag(href=url_for(tag.path))= tag.name
                else
                  .widget
                    .tagcloud
                      != tagcloud({min_font: 18, max_font:24 , amount: 100, orderby: 'count'})
